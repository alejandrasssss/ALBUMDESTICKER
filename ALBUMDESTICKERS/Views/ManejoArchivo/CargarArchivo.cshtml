@{
    ViewBag.Title = "CargarArchivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Carga de álbum</h2>
<h4>(archivo *csv)</h4>

@using (Html.BeginForm("CargarArchivo", "ManejoArchivo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label for="exampleInputFile">Entrada de archivo</label>
    <input type="file" class="form-control-file" name="postedFile" aria-describedby="fileHelp">
    <small id="fileHelp" class="form-text text-muted">Tipo de archivo *.csv, debe de contener Nombre, País, Jugadores.</small>

    <button type="submit" class="btn btn-primary">Cargar</button>
}